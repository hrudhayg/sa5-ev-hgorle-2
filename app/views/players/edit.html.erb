<h1>Edit Player for <%= @team.name %> </h1>
<%= bootstrap_form_with model: @player, method: :patch, url: team_player_path(@team, @player), data: { turbo: false } do |f| %>
 
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
    <%= f.select :position, Player::POSITIONS, include_blank: true %>
    <%= f.submit 'Update Player' %>
   
  <% end %>

  <p class="mt-3">
  <%= link_to 'Back', team_players_path(@team), class: 'btn btn-outline-secondary' %>
</p>