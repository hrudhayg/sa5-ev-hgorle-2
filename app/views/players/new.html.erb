<h1>New Player for <%= @team.name %></h1>
<%= bootstrap_form_with model: @player, method: :post, url: team_players_path(@team), data: { turbo: false } do |f| %>
    <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>
  <%= f.select :position, Player::POSITIONS, include_blank: true %>
  <%= f.submit 'Create Player' %>
 
<% end %>

<p class="mt-3">
  <%= link_to 'Back', team_players_path(@team), class: 'btn btn-outline-secondary' %>
</p>