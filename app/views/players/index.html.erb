<h1> <%= @team.name %> Roster</h1>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Position</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% @players.each do |player| %>
        <tr>
            <td><%= player.first_name %></td>
            <td><%= player.last_name %></td>
            <td><%= player.position %></td>
            <td>
                <%= link_to 'Show', team_player_path(@team, player) %>
                |<%= link_to 'Edit', edit_team_player_path(@team, player) %>
                |<%= button_to 'Delete', team_player_path(@team, player), method: :delete, data: { turbo: false }, class: 'btn btn-outline-secondary btn-sm', form: { class: 'd-inline' } %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<p>
  <%= link_to 'New Player', new_team_player_path(@team), class: 'btn btn-outline-secondary' %>
</p>

<p>
  <%= link_to 'Back to Team', team_path(@team), class: 'btn btn-outline-secondary' %>
</p>
